{% extends 'base.html.twig' %}

{% block title %}Etudiant {% endblock %}

{% block body %}
<div>
                       <a href="{{ path('new_professeur') }}"  class="btn btn-lg btn-info"><i class="material-icons">&#xE147;</i> <span>Ajouter Professeur</span></a>
                   </div>
  <table class="table table-striped table-hover" class="col-sm-8">
     <thead>

                        <tr>
                            <th>#</th>
                             <th>nom</th>
                             <th>prenom</th>
                             <th>cin</th>
                             <th>matiere</th>
                             <td>action</td>
                             
                    </thead>
                   <tbody>
                   {% for professeur in professeurs %}
                      <tr>
                           
                            <td>{{ professeur.id }}</td>
                            <td>{{ professeur.nom}}</td>
                            <td>{{ professeur.prenom }}</td>
                            <td>{{ professeur.cin}}</td>
                             {% if  professeur.matiere.libelle  is defined %}
                            <td>{{  professeur.matiere.libelle }}</td>
                  {% else %}
                            <td> -- </td>
                  {% endif %}
                           <td>
                           
                             <a href="{{ path('show_professeur', {'id': professeur.id}) }}" class="glyphicon glyphicon-cog"><i style="font-size:24px" class="fa" title="Show">&#xf007;</i></a>
                                <a href="edit/{{professeur.id}}" class="edit" ><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
                              <a href="delete/{{professeur.id}}"class="edit" ><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a> 
                            </td>
                        </tr>

  {% endfor %}
  </tbody>                      
  </table>
    </div>
    </div>

 {% endblock %}