{% extends 'base.html.twig' %}

{% block title %}Professeur{% endblock %}

{% block body %}
   




        <div class="container">
            <div class="row">
                <div class="col-12 bg-white ">
                {##}
                    <div class="d-flex flex-column align-items-center" <img class="photo" src="https://images.unsplash.com/photo-1541647376583-8934aaf3448a?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=634&q=80" alt="">

                        <p class="fw-bold h4 mt-3">{{[ professeur.nom , ' ',professeur.prenom ] | join }}</p>
                       
                        <div class="d-flex ">
                            <a href="{{ path('edit_professeur', {'id': professeur.id}) }}"  class="btn btn-primary follow me-2" >edit</a>
                     <a href="delete/{{professeur.id}}"  class="btn btn-outline-primary message" >Delete</a>

                        </div>
                    </div>
                </div>
                
        </div>
      
        <div class="container">
            <div class="row">
                <div class="col-12 bg-white ">
                   
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">nom</p>
                        <p class="py-2 text-muted">{{ professeur.nom }}</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">prenom</p>
                        <p class="py-2 text-muted">{{ professeur.prenom }}</p>
                    </div>
                    <div class="d-flex align-items-center justify-content-between border-bottom">
                        <p class="py-2">cin</p>
                        <p class="py-2 text-muted">{{ professeur.cin }}</p>
                    </div>
                    
                    
                    <div class="d-flex align-items-center justify-content-between">
                        <p class="py-2">filiere</p>
                       {% if  professeur.matiere.libelle  is defined %}
                            <td>{{  professeur.matiere.libelle  }}</td>
                  {% else %}
                            <td> -- </td>
                  {% endif %}
                    </div>
                </div>
               
            </div>
        </div>
{% endblock %}